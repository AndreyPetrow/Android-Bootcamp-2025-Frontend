<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/eventCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_marginVertical="3dp"
        android:layout_marginHorizontal="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gainsboro">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/eventCardImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                app:srcCompat="@color/gray"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/eventCardImage">

                <TextView
                    android:id="@+id/eventCardTitle"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:text="Помощь в ликвидации последствий разлива нефтепродуктов"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/distanceImage"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_below="@+id/eventCardTitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/distance" />

                <TextView
                    android:id="@+id/eventCardDistance"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/eventCardTitle"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/distanceImage"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="550 м"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/pinDropImage"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_below="@+id/distanceImage"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/pin_drop" />

                <TextView
                    android:id="@+id/eventCardAddress"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/eventCardDistance"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/pinDropImage"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="Россия, Ульяновская обл, г. Ульяновск, ул. Фруктовая"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:gravity="center_vertical" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/eventCardImageCenter"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_below="@+id/pinDropImage"
                    android:layout_marginTop="8dp"
                    android:src="@color/gray"
                    app:shapeAppearanceOverlay="@style/roundedImageViewSmall" />

                <TextView
                    android:id="@+id/eventCardCenterName"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/eventCardAddress"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/eventCardImageCenter"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:text="Заволжский волонтерский центр 'Здоровый выбор' г.Ульяновск"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:gravity="center_vertical" />
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>